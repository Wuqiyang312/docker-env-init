FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=Asia/Shanghai

RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    make \
    git \
    vim \
    curl \
    wget \
    pkg-config \
    libssl-dev \
    gdb \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

WORKDIR /workspace

CMD ["bash"]
